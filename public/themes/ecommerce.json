{
  "name": "E-commerce Theme",
  "version": "1.0.0",
  "layout": {
    "home": [
      {
        "block": "Hero",
        "props": {
          "title": "Shop the Latest Trends",
          "subtitle": "Discover amazing products at unbeatable prices",
          "buttonText": "Shop Now"
        }
      },
      {
        "block": "CategoryGrid",
        "props": {
          "categories": [
            "Men's Fashion",
            "Women's Fashion",
            "Electronics",
            "Home & Garden"
          ],
          "columns": 2
        }
      },
      {
        "block": "ProductList",
        "child": {
          "block": "ProductCard",
          "className": "border rounded-lg p-4 hover:shadow-lg transition"
        },
        "props": {
          "title": "Featured Products",
          "columns": 4,
          "products": [
            {
              "id": 1,
              "name": "Classic Tee",
              "price": "$25.00",
              "image": "https://media.istockphoto.com/id/2185993729/photo/advertising-concepts-of-skin-care-cosmetics-with-cream-in-jar-serum-and-moisturizer.jpg?s=1024x1024&w=is&k=20&c=1wt7RsuX0juqTPBxd7dp0p-n5EPtRPhdGNUBUrsX1k0="
            },
            {
              "id": 2,
              "name": "Leather Shoes",
              "price": "$89.00",
              "image": "https://media.istockphoto.com/id/2176392519/photo/natural-cosmetic-products-in-the-bathroom-on-white-background.jpg?s=1024x1024&w=is&k=20&c=UflE_DQDZpBVZaa9439y5T27KW_aj9aevW2QTHP4If0="
            },
            {
              "id": 3,
              "name": "Stylish Hat",
              "price": "$18.00",
              "image": "https://cdn.pixabay.com/photo/2017/07/28/16/30/bee-pollen-2549125_1280.jpg"
            },
            {
              "id": 3,
              "name": "Stylish Hat",
              "price": "$18.00",
              "image": "https://cdn.pixabay.com/photo/2018/05/29/23/18/potato-3440360_1280.jpg"
            }
          ],
          "className": "py-16 px-4"
        }
      },
      {
        "block": "TextBlock",
        "props": {
          "heading": "Product Details",
          "content": "This would be a product page with dynamic content.",
          "align": "center"
        }
      }
    ],
    "product": [
      {
        "block": "TextBlock",
        "props": {
          "heading": "Product Details",
          "content": "This would be a product page with dynamic content.",
          "align": "left"
        }
      }
    ],
    "footer": [
      {
        "block": "FooterLinks",
        "props": {
          "links": [
            {
              "title": "Shop",
              "url": "/shop"
            },
            {
              "title": "My Account",
              "url": "/account"
            },
            {
              "title": "Customer Service",
              "url": "/support"
            },
            {
              "title": "Returns",
              "url": "/returns"
            }
          ],
          "copyright": "Â© 2024 E-commerce Platform. All rights reserved."
        }
      }
    ]
  },
  "global": {
    "colors": {
      "primary": "#dc2626",
      "secondary": "#16a34a",
      "background": "#fafafa",
      "text": "#111827",
      "accent": "#ea580c"
    },
    "fonts": {
      "base": "system-ui, sans-serif",
      "heading": "Playfair Display, serif"
    }
  },
  "metadata": {
    "description": "E-commerce focused theme with product-centric layout",
    "author": "E-commerce Team",
    "created": "2024-07-09"
  }
}
